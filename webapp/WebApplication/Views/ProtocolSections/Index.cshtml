@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@using K9.SharedLibrary.Models
@using EButtonType = K9.SharedLibrary.Models.EButtonType
@model ProtocolSection
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}
@Html.BootstrapTable(new DataTableOptions<ProtocolSection>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = ((BaseController<ProtocolSection>)ViewContext.Controller).Roles.CurrentUserIsInRoles(RoleNames.Administrators),
    VisibleColumns = new List<string>
    {
        "Name",
        "ShortDescription",
        "Recommendations",
        "DisplayOrder",
    }
})
