@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model ProductPack

@if (Model.Id > 0)
{
    @Html.BootstrapActionLinkButton(Dictionary.EditProducts, "EditProducts", "ProductPacks", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)
    
    if (Model.Products != null && Model.Products.Any())
    {
        @Html.BootstrapActionLinkButton(Dictionary.EditProductQuantities, "EditProductQuantities", "ProductPacks", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)

        @Html.BootstrapActionLinkButton(Dictionary.DuplicateProductPack, "DuplicateProductPack", "ProductPacks", new { id = Model.Id }, "fa fa-copy", EButtonClass.Primary)
    }
}