@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@using K9.SharedLibrary.Models
@using EButtonType = K9.SharedLibrary.Models.EButtonType
@model ProductPack
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}
@Html.BootstrapTable(new DataTableOptions<ProductPack>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = ((BaseController<ProductPack>)ViewContext.Controller).Roles.CurrentUserIsInRoles(RoleNames.Administrators),
    Controller = "ProductPacks",
    Action = "List",
    VisibleColumns = new List<string>
    {
        "Name",
        "Price",
    },
    CustomButtons = new List<IButton>
    {
        new Button
        {
            Action = "EditProducts",
            Text = Dictionary.EditProducts,
            ButtonType = EButtonType.Primary,
            IconCssClass = "fa fa-pencil"
        },
        new Button
        {
            Action = "EditProductQuantities",
            Text = Dictionary.EditProductQuantities,
            ButtonType = EButtonType.Primary,
            IconCssClass = "fa fa-pencil"
        },
    }
})
