@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@using K9.SharedLibrary.Models
@using EButtonType = K9.Base.WebApplication.Enums.EButtonType
@model Contact
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}
@Html.BootstrapTable(new DataTableOptions<Contact>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = ((BaseController<Contact>)ViewContext.Controller).Roles.CurrentUserIsInRoles(RoleNames.Administrators),
    VisibleColumns = new List<string>
    {
        "FullName",
        "EmailAddress",
        "Notes",
        "IsUnsubscribed"
    },
    CustomButtons = new List<IButton>
    {
        new Button
        {
            Action = "ViewContactAddressLabel",
            Text = Dictionary.ViewContactAddressLabel,
            ButtonType = K9.SharedLibrary.Models.EButtonType.Info,
            IconCssClass = "fa fa-address"
        },
        new Button
        {
            Action = "ReviewCommission",
            Text = Dictionary.ReviewRepCommissions,
            ButtonType = K9.SharedLibrary.Models.EButtonType.Info,
            IconCssClass = "fa fa-money"
        }
    }
})
