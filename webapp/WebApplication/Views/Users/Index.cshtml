@using EButtonType = K9.SharedLibrary.Models.EButtonType
@model User
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}
@Html.BootstrapTable(new DataTableOptions<User>
{
    VisibleColumns = new List<string>
    {
         "FullName",
         "Username",
         "BirthDate",
         "EmailAddress",
         "PhoneNumber",
         "IsUnsubscribed"
    },
    CustomButtons =
    {
        new Button
        {
            Action = "EditProtocols",
            Text = Dictionary.EditProtocols,
            ButtonType = EButtonType.Primary,
            IconCssClass = "fa fa-pencil"
        },
        new Button
        {
            Action =  !WebSecurity.IsConfirmed(Model.Username) ? "ActivateUserAccount" : "DeactivateUserAccount",
            Text = !WebSecurity.IsConfirmed(Model.Username) ? K9.Base.Globalisation.Dictionary.ActivateAccount : Dictionary.DeactivateAccount,
            ButtonType = EButtonType.Primary,
            IconCssClass = !WebSecurity.IsConfirmed(Model.Username) ? "fa fa-checkcircle" : "fa fa-stop"
        }
    }
})