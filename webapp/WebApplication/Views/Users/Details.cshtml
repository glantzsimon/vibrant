@using K9.Base.WebApplication.Helpers
@model User
@{
	Layout = "../Shared/_LayoutFormSmall.cshtml";
}
@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
		@Html.HiddenFor(model => model.Id)
		@Html.Partial("_DisplayFields")
		@Html.AuditFieldsForModel(Model)

	    <hr/>

	    if (!WebSecurity.IsConfirmed(Model.Username))
	    {
	        @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.ActivateAccount, "ActivateUserAccount", "Account", new { userId = Model.Id })
	    }
		@Html.BootstrapBackToListButton()
		@Html.CrudButtonsForModel(Model)

	    @Html.Partial("_CollectionsButtons")
	}
}