@using K9.Base.WebApplication.Helpers
@model Client
@{
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}
@using (Html.BeginForm("Edit", "Clients"))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.BootstrapEditorFor(model => model.ClientId)
    }
}
@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_EditFields")
        <hr />
        @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.Update, EButtonType.Submit, "fa-save")
        @Html.BootstrapBackToListButton()
    }
}
<script type="text/javascript">
    $(window).on("load",
        function () {
            $("#ClientId").change(function () {
                $("#ClientId").closest("form").submit();
            });
        })
</script>