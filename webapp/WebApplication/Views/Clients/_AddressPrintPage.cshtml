@model K9.WebApplication.Models.AddressLabelViewModel

<div class="row padding-0 margin-0">
    @for (int i = 0; i < Model.Recipients.Count; i++)
    {
        if (i == AddressLabelViewModel.MaxRecipientsPerSection)
        {
            @:</div>
            @:<div class="row padding-0 margin-0">
        }
        
        <div class="col-xs-4 padding-0 margin-0">
            @Html.Partial("_AddressLabel", Model.Recipients[i])
        </div>
    }
</div>

