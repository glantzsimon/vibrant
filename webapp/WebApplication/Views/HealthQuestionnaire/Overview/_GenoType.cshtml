@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Config
@using K9.WebApplication.Enums
@using K9.WebApplication.Helpers
@using K9.WebApplication.Options
@model HealthQuestionnaire

@{
    var genoType = Model.CalculateGenotype();
}

<div class="row">
    <div class="col-xs-12">
        <h3 class="section-title">@Dictionary.GenoType</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => genoType.GenoType)
    </div>
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => genoType.Strength)
    </div>
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => Model.BloodGroupDisplay)
    </div>
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => Model.RhesusFactorDisplay)
    </div>
</div>

<div class="row">
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => Model.TorsoLengthIsGreaterThanLegLength)
    </div>
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => Model.LowerLegLengthIsGreaterThanUpperLegLength)
    </div>
    <div class="col-xs-4 col-sm-3 col-md-2">
        @Html.BootstrapDisplayFor(e => Model.LeftIndexFingerIsLongerThanRingFinger)
    </div>
</div>

