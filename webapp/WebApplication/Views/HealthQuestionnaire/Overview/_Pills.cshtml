@using K9.Base.WebApplication.Extensions
@using K9.SharedLibrary.Authentication
@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Config
@using K9.WebApplication.Enums
@using K9.WebApplication.ViewModels
@model HealthQuestionnaireViewModel

<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#personal-details">@Dictionary.PersonalDetails</a></li>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <li><a data-toggle="pill" href="#scores">@Dictionary.Scores</a></li>
    }

    <li><a data-toggle="pill" href="#ninestarki">@Dictionary.NineStarKi</a></li>

    <li><a data-toggle="pill" href="#genotype">@Dictionary.GenoType</a></li>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <li><a data-toggle="pill" href="#cbs-methylation">@Dictionary.CbsAndMethylation</a></li>
    }

    <li><a data-toggle="pill" href="#doshas">@Dictionary.Doshas</a></li>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <li><a data-toggle="pill" href="#family-history">@Dictionary.FamilyHistory</a></li>
    }

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <li><a data-toggle="pill" href="#general-health">@Dictionary.GeneralHealth</a></li>
    }

    <li><a data-toggle="pill" href="#recommendations">@Dictionary.RecommendationsLabel</a></li>
</ul>

<div class="tab-content">
    <div id="personal-details" class="tab-pane fade active in padding-top-15">
        @Html.Partial("Overview/_Page1PersonalDetails", Model.HealthQuestionnaire)
    </div>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <div id="scores" class="tab-pane fade padding-top-15">
            @Html.Partial("Overview/_Page2Scores", Model.HealthQuestionnaire)
        </div>
    }

    <div id="ninestarki" class="tab-pane fade padding-top-15">
        @Html.Partial("Overview/_Page3NineStarKi", Model.HealthQuestionnaire)
    </div>

    <div id="genotype" class="tab-pane fade padding-top-15">
        @Html.Partial("Overview/_Page4GenoType", Model.HealthQuestionnaire)
    </div>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <div id="cbs-methylation" class="tab-pane fade padding-top-15">
            @Html.Partial("Overview/_Page5CbsMethylation", Model.HealthQuestionnaire)
        </div>
    }

    <div id="doshas" class="tab-pane fade padding-top-15">
        @Html.Partial("Overview/_Page6Doshas", Model.HealthQuestionnaire)
    </div>

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <div id="family-history" class="tab-pane fade padding-top-15">
            @Html.Partial("Overview/_Page7FamilyHistory", Model.HealthQuestionnaire)
        </div>
    }

    @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
    {
        <div id="general-health" class="tab-pane fade padding-top-15">
            @Html.Partial("Overview/_Page8GeneralHealth", Model.HealthQuestionnaire)
        </div>
    }

    <div id="recommendations" class="tab-pane fade padding-top-15">
        @if (Model.AutoGeneratedProtocol != null)
        {
            @Html.Partial("Overview/_Page9Recommendations", Model.AutoGeneratedProtocol)
        }
    </div>
</div>