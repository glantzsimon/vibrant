@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model List<Product>

@for (int i = 0; i < Model.Count; i++)
{
    @Html.HiddenFor(e => Model[i].Id)
    @Html.HiddenFor(e => Model[i].Name)
    @Html.HiddenFor(e => Model[i].IsSelected)

    if (Model[i].IsSelected)
    {
        <div class="row">
            <div class="col-sm-8">
                @Html.BootstrapDisplayFor(e => Model[i].Name)
            </div>
            <div class="col-sm-4">
                @Html.BootstrapEditorFor(e => Model[i].DisplayAmount)
            </div>
        </div>
    }
}

