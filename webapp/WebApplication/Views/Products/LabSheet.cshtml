@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@model Product
@{
    Layout = "../Shared/_LayoutFormSmall.cshtml";
    ViewBag.SubTitle = $"{Model.Name} {Dictionary.LabSheet}";
}
@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        @Html.Hidden("index", 0)

        <div class="row">
            <div class="col-xs-6">
                @Html.BootstrapDropdownFor(model => Model.ProductId, this.GetDropdownData().GetSelectList<Product>(Model.ProductId, true))
            </div>
            <div class="col-xs-6">
                @Html.BootstrapEditorFor(model => Model.BatchSize)
            </div>
        </div>

        <hr />
        @Html.Partial("_ProductLabSheet")
        <hr />
        @Html.BootstrapBackToListButton()
        @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.Previous, "LabSheet", null, new { productId = Model.Id, index = -1 }, "fa-arrow-left")
        @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.Next, "LabSheet", null, new { productId = Model.Id, index = 1 }, "fa-arrow-right")
    }
}

<script type="text/javascript">
    $(function () {
        $("#ProductId, #BatchSize").change(function () {
            $("#ProductId").closest("form").submit();
        });
    })
</script>