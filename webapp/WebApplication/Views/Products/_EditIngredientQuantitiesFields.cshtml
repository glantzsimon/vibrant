@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Product

@Html.HiddenFor(e => e.ProductId)
@Html.HiddenFor(e => e.Name)
@Html.HiddenFor(e => e.AmountPerServing)

@for (int i = 0; i < Model.Ingredients.Count; i++)
{
    @Html.HiddenFor(e => Model.Ingredients[i].Id)
    @Html.HiddenFor(e => Model.Ingredients[i].Ingredient.Id)
    @Html.HiddenFor(e => Model.Ingredients[i].Ingredient.Name)
    @Html.HiddenFor(e => Model.Ingredients[i].Ingredient.Concentration)
    @Html.HiddenFor(e => Model.Ingredients[i].Ingredient.RecommendedDailyAllownace)

<div class="row">
    <div class="col-sm-4">
        @Html.BootstrapDisplayFor(e => Model.Ingredients[i].Ingredient.Name)
    </div>
    <div class="col-sm-4">
        @Html.BootstrapDisplayFor(e => Model.Ingredients[i].Ingredient.FormattedRDA)
    </div>
    <div class="col-sm-4">
        @Html.BootstrapEditorFor(e => Model.Ingredients[i].Amount)
    </div>
</div>
}

