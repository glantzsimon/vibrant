@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Product

@Html.HiddenFor(e => e.AmountPerServing)

<div class="row">
    <div class="col-sm-5">
        @Html.LabelFor(e => Model.Ingredients[0].Name)
    </div>
    <div class="col-sm-4">
        @Html.LabelFor(e => Model.Ingredients[0].AmountPer100Capsules)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.Ingredients[0].Ingredient.IsHydroscopic)
    </div>
</div>
<hr />
@for (int i = 0; i < Model.Ingredients.Count; i++)
{
    <div class="row">
        <div class="col-sm-5">
            @Html.DisplayFor(e => Model.Ingredients[i].Ingredient.Name)
        </div>
        <div class="col-sm-4">
            @Html.DisplayFor(e => Model.Ingredients[i].FormattedLargeAmountPer100Capsules)
        </div>
        <div class="col-sm-3">
            @Model.Ingredients[i].Ingredient.IsHydroscopic.ToYesNo()
        </div>
    </div>
    if (i < Model.Ingredients.Count - 1)
    {
        <hr />
    }
}

