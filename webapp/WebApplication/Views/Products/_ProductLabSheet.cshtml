@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Product

@Html.HiddenFor(e => e.AmountPerServing)

<div class="row">
    <div class="col-sm-12">
        <h5>@Model.Name</h5>
    </div>
</div>

@for (int i = 0; i < Model.Ingredients.Count; i++)
{
    <div class="row">
        <div class="col-sm-6">
            @Html.BootstrapDisplayFor(e => Model.Ingredients[i].Ingredient.Name)
        </div>
        <div class="col-sm-6">
            @Html.BootstrapDisplayFor(e => Model.Ingredients[i].FormattedAmountPer100Capsules)
        </div>
    </div>
}

