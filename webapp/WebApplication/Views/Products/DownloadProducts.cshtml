        @Html.BootstrapActionLinkButton(Dictionary.DownloadProducts200CapsulesCsv, "DownloadProducts200Capsules", "Products", null, "fa-download", EButtonClass.Success)
        @Html.BootstrapActionLinkButton(Dictionary.DownloadProducts400CapsulesCsv, "DownloadProducts400Capsules", "Products", null, "fa-download", EButtonClass.Success)
        @Html.BootstrapActionLinkButton(Dictionary.DownloadProductsLiquidsCsv, "DownloadProductsLiquids", "Products", null, "fa-download", EButtonClass.Success)
        @Html.BootstrapActionLinkButton(Dictionary.DownloadProductsPowdersCsv, "DownloadProductsPowders", "Products", null, "fa-download", EButtonClass.Success)
    }
}
