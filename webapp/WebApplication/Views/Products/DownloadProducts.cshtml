@using K9.Base.WebApplication.Helpers
@model Product
@{
    Layout = "../Shared/_LayoutForm.cshtml";
    ViewBag.Title = Dictionary.DownloadProductsCsv;
    ViewBag.SubTitle = Dictionary.DownloadProductsCsv;
}

@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        @Html.BootstrapActionLinkButton(Dictionary.DownloadProductsCsv, "DownloadProductsAll", "Products", null, "fa-download", EButtonClass.Success)
