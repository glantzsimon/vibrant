@using K9.Base.WebApplication.Helpers
@model UserAccount.ResetPasswordModel
@{
	ViewBag.Title = K9.Base.Globalisation.Dictionary.PasswordResetTitle;
	ViewBag.SubTitle = K9.Base.Globalisation.Dictionary.PasswordResetTitle;
	Layout = "~/Views/Shared/_LayoutFormSmall.cshtml";
}

@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
		@Html.HiddenFor(model => model.UserName)
		@Html.HiddenFor(model => model.Token)
		
		@Html.BootstrapEditorFor(model => model.NewPassword)
		@Html.BootstrapEditorFor(model => model.ConfirmPassword)
		<hr/>
		@Html.BootstrapButton(K9.Base.Globalisation.Dictionary.ResetPassword)
	}
}

