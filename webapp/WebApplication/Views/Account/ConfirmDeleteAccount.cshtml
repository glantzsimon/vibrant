@model ConfirmDeleteAccountModel
@{
    ViewBag.Title = K9.Base.Globalisation.Dictionary.MyAccountTitle;
    ViewBag.SubTitle = K9.Base.Globalisation.Dictionary.MyAccountDeleteAccount;
    Layout = "../Shared/_LayoutFormSmall.cshtml";
}
@using (Html.BeginForm("DeleteAccount", "Account"))
{
    using (Html.BeginBootstrapForm())
    {
        <h3>@K9.Base.Globalisation.Dictionary.MyAccountDeleteConfirm</h3>
        @Html.HiddenFor(model => model.UserId)
        @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.DeleteMyAccount, EButtonType.Delete)
    }
}