@using K9.Base.WebApplication.Helpers
@model List<Order>
@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        <div class="row">
            <div class="col-sm-2">
                @Html.LabelFor(e => Model[0].OrderNumber)
            </div>
            <div class="col-sm-4">
                @Html.LabelFor(e => Model[0].RequestedOn)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(e => Model[0].FormattedInternationalGrandTotal)
            </div>
            <div class="col-sm-3">
                @Html.LabelFor(e => Model[0].OrderStatusText)
            </div>
        </div>

        <hr />

        for (int i = 0; i < Model.Count; i++)
        {
            <div class="row">
                <div class="col-sm-2">
                    <a href="@Url.Action("ViewOrder", "Order", new {ordernumber = Model[i].OrderNumber})">
                        @Html.DisplayFor(e => Model[i].OrderNumber)
                    </a>
                </div>
                <div class="col-sm-4">
                    @Html.DisplayFor(e => Model[i].RequestedOn)
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(e => Model[i].InternationalGrandTotal)
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(e => Model[i].OrderStatusText)
                </div>
            </div>

            <hr />
        }
    }
}