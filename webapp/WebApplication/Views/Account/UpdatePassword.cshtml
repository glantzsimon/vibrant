@using K9.Base.WebApplication.Helpers
@model UserAccount.LocalPasswordModel
@{
	ViewBag.Title = K9.Base.Globalisation.Dictionary.ChangePassword;
	ViewBag.SubTitle = K9.Base.Globalisation.Dictionary.ChangePassword;
	Layout = "~/Views/Shared/_LayoutFormSmall.cshtml";
}

@using (Html.BeginForm())
{
	using (Html.BeginBootstrapForm())
	{
		 @Html.BootstrapEditorFor(model => model.OldPassword)
		 @Html.BootstrapEditorFor(model => model.NewPassword)
		 @Html.BootstrapEditorFor(model => model.ConfirmPassword)
		 <hr/>
		 @Html.BootstrapButton(K9.Base.Globalisation.Dictionary.Update, EButtonType.Submit, "fa-save")
	}
}