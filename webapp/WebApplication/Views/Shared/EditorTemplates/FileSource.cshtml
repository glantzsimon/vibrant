@model K9.SharedLibrary.Models.FileSource
@Html.Partial("_FileSource")
@Html.LabelFor(model => model)
<div class="input-group">
    <label class="input-group-btn">
        <span class="btn btn-primary btn-file">
            @K9.Base.Globalisation.Dictionary.Browse&hellip; @Html.TextBoxFor(model => model.PostedFile, new { @class = "file-upload", type = "file", style = "display: none;",  multiple = "multiple", accept = Model.GetAcceptedFileExtensionsList() })
        </span>
    </label>
    <input type="text" class="form-control file-label" readonly />
</div>