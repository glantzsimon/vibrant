@using K9.WebApplication.Helpers
@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    var background = ViewBag.Background == ViewBagHelper.EViewBackground.Jarallax ? "background-stars jarallax" : "";
}

@if (ViewBag.Background != ViewBagHelper.EViewBackground.Jarallax)
{
    <div class="background-stars background-fixed">
        &nbsp;
    </div>
}

<div class="@background">
    @Html.Partial("_Navbar")
    <div class="mainContent">
        <div class="container-fluid">
            <div class="page shadow alphaBackground roundCorners wide-form">
                @if (!string.IsNullOrEmpty(ViewBag.SubTitle))
                {
                    <div class="page-header">
                        <h2><strong>@ViewBag.SubTitle</strong></h2>
                    </div>
                }
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section headerscripts {
    @RenderSection("headerscripts", false)
}

@section scripts {
    @RenderSection("scripts", false)
}