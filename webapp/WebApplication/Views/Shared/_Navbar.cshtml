                        <li class="desktop-only @ViewContext.GetActiveClass("Index", "Home")"><a href="@Url.Action("Index", "Home")"> <span class="desktop-only">@Dictionary.VibrantHealth</span><span class="device-only">@Dictionary.PersonalisedNutrition</span></a></li>

