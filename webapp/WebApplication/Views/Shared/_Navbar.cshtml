                                <li class="@ViewContext.GetActiveClass("NutritionalSupplements", "Supplementation")"><a href="@Url.Action("NutritionalSupplements", "Supplementation")"> @Dictionary.NutritionalSupplements</a></li>
                                <li class="@ViewContext.GetActiveClass("Superfoods", "Supplementation")"><a href="@Url.Action("Superfoods", "Supplementation")"> @Dictionary.SuperFoods</a></li>
                                <li class="@ViewContext.GetActiveClass("SuperHerbs", "Supplementation")"><a href="@Url.Action("SuperHerbs", "Supplementation")"> @Dictionary.SuperHerbs</a></li>
                            </ul>
                        </li>

                        <li class="@ViewContext.GetActiveClass("Index", "Home")"><a class="device-only" href="@Url.Action("Index", "Home")"> <span class="device-only">@K9.Base.Globalisation.Dictionary.Home</span></a></li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span> @Dictionary.SelfCare</span> <span class="caret"></span></a>
                            <ul class="dropdown-menu nav navbar-nav">
                                <li><a href="@Url.Action("Index", "Predictions")"> @Dictionary.VibrantHealth</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true"> <span> @Dictionary.Learn</span> <span class="caret"></span></a>
                            <ul class="dropdown-menu nav navbar-nav">
                                <li class="@ViewContext.GetActiveClass("Index", "Home")"><a href="@Url.Action("Index", "SelfCare")"> @Dictionary.AboutVibrantHealth</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="clearfix"> </div>
                </div>
            </nav>
        </div>
    </div>
</div>
