@using K9.Base.WebApplication.Extensions
@using K9.SharedLibrary.Authentication
@model Ingredient

<div class="row">
    <div class="col-sm-12">
        @Html.LabelFor(e => Model.Substitutes[0].Name)
    </div>
</div>
<hr />
@for (int i = 0; i < Model.Substitutes.Count; i++)
{
    <div class="row">
        <div class="col-sm-12">
            @if (K9.WebApplication.Helpers.SessionHelper.CurrentUserIsAdmin())
            {
                <a target="_blank" href="@Url.Action("Edit", "Ingredients", new {id = Model.Substitutes[i].SubstituteIngredientId})">
                    @Html.DisplayFor(e => Model.Substitutes[i].Ingredient.Name)
                </a>
            }
            else
            {
                @Html.DisplayFor(e => Model.Substitutes[i].Ingredient.Name)
            }
        </div>
    </div>
    if (i < Model.Substitutes.Count - 1)
    {
        <hr />
    }
}

