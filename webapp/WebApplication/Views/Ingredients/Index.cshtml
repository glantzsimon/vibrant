@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@model Ingredient
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}

@Html.BootstrapTable(new DataTableOptions<Ingredient>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = ((BaseController<Ingredient>)ViewContext.Controller).Roles.CurrentUserIsInRoles(RoleNames.Administrators),
    VisibleColumns = new List<string>
    {
        "Name",
        "ShortDescription",
        "Cost"
    }
})
