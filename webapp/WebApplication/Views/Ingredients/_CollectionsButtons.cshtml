@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Ingredient

@if (Model.Id > 0)
{
    @Html.BootstrapActionLinkButton(Dictionary.EditIngredientSubstitutes, "EditIngredientSubstitutes", "Ingredients", new { id = Model.Id }, "", EButtonClass.Info)
    if (Model.Substitutes != null && Model.Substitutes.Any())
    {
        @Html.BootstrapActionLinkButton(Dictionary.EditIngredientSubstitutePriorities, "EditIngredientSubstitutePriorities", "Ingredients", new { id = Model.Id }, "", EButtonClass.Info)
    }
}