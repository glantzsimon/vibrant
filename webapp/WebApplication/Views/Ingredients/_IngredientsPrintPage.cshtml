@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Models
@model IngredientsLabelsViewModel

@{
    var pageIndex = 0;
}

<div class="row padding-20 margin-0">
    @for (int i = 0; i < Model.SelectIngredients.Count; i++)
    {
        if (i == 6)
        {
            pageIndex += 1;

            @:</div>
            @:<div class="row padding-0 margin-0">

            if (pageIndex >= 6)
            {
                <div class="pagebreak"></div>
                pageIndex = 0;
            }
        }

        <div class="col-xs-2 padding-0 margin-0">
            @Html.Partial("_IngredientLabel", Model.SelectIngredients[i])
        </div>
    }
</div>
