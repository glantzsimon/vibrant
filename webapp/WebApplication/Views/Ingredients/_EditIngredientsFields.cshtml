@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model List<Ingredient>


@for (int i = 0; i < Model.Count; i++)
{
    @Html.HiddenFor(e => Model[i].Id)

<div class="row">
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].Name)
    </div>
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].Cost)
    </div>
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].Quantity)
    </div>
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].QuantityInStock)
    </div>
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].Concentration)
    </div>
    <div class="col-sm-2">
        @Html.BootstrapEditorFor(e => Model[i].RecommendedDailyAllownace)
    </div>
</div>
}

