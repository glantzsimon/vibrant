@using System.Web.Mvc.Html
@using K9.Base.WebApplication.ViewModels
@model List<Ingredient>


<div class="row text-center">
    <div class="col-md-12">
        <h1 class="margin-top-5 goldenrod">
            @Dictionary.Ingredients
        </h1>
    </div>
</div>

<hr />

<article>
    @foreach (var ingredient in Model)
    {
        <h5>@ingredient.Name</h5>
        <p>@MvcHtmlString.Create(ingredient.ShortDescription)</p>
        @Html.BootstrapActionLinkButton(Dictionary.FindOutMore, "Details", "Ingredient", new { seoFriendlyId = ingredient.SeoFriendlyId }, "", EButtonClass.Primary, EButtonClass.Small)
    }
</article>