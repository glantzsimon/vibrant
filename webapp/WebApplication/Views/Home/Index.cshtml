@using K9.WebApplication.Helpers
@{
    ViewBag.Title = K9.Base.Globalisation.Dictionary.Home;
    ViewBag.SubTitle = null;
    ViewBag.Background = ViewBagHelper.EViewBackground.Jarallax;
    Layout = "../Shared/_LayoutFormMedium.cshtml";
}

<div class="container main-content">
    <div class="well margin-bottom-0">
        <div class="desktop-only">
            <video autoplay loop muted playsinline>
                <source src="~/Videos/welcome-desktop.mp4" type="video/mp4">
            </video>
        </div>
        <div class="device-only">
            <video autoplay loop muted playsinline>
                <source src="~/Videos/welcome-mobile.mp4" type="video/mp4">
            </video>
        </div>

        <article>
            @MvcHtmlString.Create(Dictionary.welcome)
        </article>
        <br />
        <div class="buttons-container">
            @Html.BootstrapActionLinkButton(Dictionary.CheckOutOurProducts, "Index", "Product", null, "", EButtonClass.Info, EButtonClass.Large)
            @Html.BootstrapActionLinkButton(Dictionary.CheckOutOurProductPacks, "Index", "ProductPack", null, "", EButtonClass.Info, EButtonClass.Large)
        </div>
        <hr />
        <article>
            @MvcHtmlString.Create(Dictionary.cbsmutation)
        </article>
    </div>
</div>