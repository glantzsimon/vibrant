@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@model RepCommission
@{
	Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
}

@Html.BootstrapTable(new DataTableOptions<RepCommission>
{
    AllowCreate = true,
    AllowEdit = true,
    AllowDelete = ((BaseController<RepCommission>)ViewContext.Controller).Roles.CurrentUserIsInRoles(RoleNames.Administrators),
    VisibleColumns = new List<string>
    {
        "RepName",
        "AmountRedeemed",
        "RedeemedOn"
    }
})
