@using K9.Base.WebApplication.Extensions
@using K9.SharedLibrary.Authentication
@using K9.WebApplication.Constants
@model Order

<div class="row">
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].Name)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].Amount)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].PriceTier)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].TotalPrice)
    </div>
</div>
<hr />
@for (int i = 0; i < Model.ProductPacks?.Count; i++)
{
    <div class="row">
        <div class="col-sm-3">
            @if (this.GetRoles().CurrentUserIsInRoles(RoleNames.Administrators))
            {
                <a target="_blank" href="@Url.Action("Edit", "ProductPacks", new {id = Model.ProductPacks[i].ProductPackId})">
                    @Html.DisplayFor(e => Model.ProductPacks[i].ProductPack.Name)
                </a>
            }
            else if (this.GetRoles().CurrentUserIsInRoles(Constants.UnicornUser))
            {
                <a target="_blank" href="@Url.Action("Link", "ProductPack", new {id = Model.ProductPacks[i].ProductPack.ExternalId})">
                    @Html.DisplayFor(e => Model.ProductPacks[i].ProductPack.Name)
                </a>
            }
            else
            {
                @Html.DisplayFor(e => Model.ProductPacks[i].ProductPack.Name)
            }
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(e => Model.ProductPacks[i].Amount)
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(e => Model.ProductPacks[i].PriceTier)
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(e => Model.ProductPacks[i].TotalPrice)
        </div>
    </div>

    <hr />
}
<div class="row">
    <div class="col-sm-3">
        <strong>@Dictionary.TotalLabel</strong>
    </div>
    <div class="col-sm-3">
        <strong>@Model.GetTotalProductPacks()</strong>
    </div>
    <div class="col-sm-3">
    </div>
    <div class="col-sm-3">
        <strong>@Html.DisplayFor(e => Model.TotalProductPacksPrice)</strong>
    </div>
</div>