@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Order

@if (Model.Id > 0)
{
    @Html.BootstrapActionLinkButton(Dictionary.OrderReview, "OrderReview", "Orders", new { id = Model.Id }, "fa fa-eye", EButtonClass.Info)

    @Html.BootstrapActionLinkButton(Dictionary.DuplicateOrder, "DuplicateOrder", "Orders", new { id = Model.Id }, "fa fa-copy", EButtonClass.Primary)

    @Html.BootstrapActionLinkButton(Dictionary.DownloadAsCsv, "DownloadOrderCsv", "Orders", new { id = Model.Id }, "fa fa-download", EButtonClass.Success)

    @Html.BootstrapActionLinkButton(Dictionary.DownloadGbpAsCsv, "DownloadOrderCsvInGbp", "Orders", new { id = Model.Id }, "fa fa-download", EButtonClass.Success)

    <hr />

    @Html.BootstrapActionLinkButton(Dictionary.EditProducts, "EditProducts", "Orders", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)
    if (Model.Products != null && Model.Products.Any())
    {
        @Html.BootstrapActionLinkButton(Dictionary.EditProductQuantities, "EditProductQuantities", "Orders", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)
    }

    <hr />

    @Html.BootstrapActionLinkButton(Dictionary.EditProductPacks, "EditProductPacks", "Orders", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)
    if (Model.ProductPacks != null && Model.ProductPacks.Any())
    {
        @Html.BootstrapActionLinkButton(Dictionary.EditProductPackQuantities, "EditProductPackQuantities", "Orders", new { id = Model.Id }, "fa fa-pencil", EButtonClass.Primary)
    }
}