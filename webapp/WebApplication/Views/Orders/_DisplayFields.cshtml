@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Order

<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.Name)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.ShortDescription)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.ClientId)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.RepId)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.UserId)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.IsLocalDelivery)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.IsOnHold)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.OrderNumber)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.OrderType)
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.TotalPrice)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.ShippingCost)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.FormattedSuggestedDiscountAsPercent)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.FormattedSuggestedDiscountAmount)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.Discount)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.DiscountAmount)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.ShopCommission)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.ShopPayableAmount)
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.GrandTotal)
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.OrderStatusText)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.IsPaid)
    </div>
</div>

<hr />

<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.RequestedOn)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.DueBy)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.StartedOn)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.MadeOn)
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.PaidOn)
    </div>
    <div class="col-sm-6">
        @Html.BootstrapDisplayFor(model => model.CompletedOn)
    </div>
</div>

<br />
<div class="row">
    <div class="col-sm-12">
        <h3>@Dictionary.Details</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        @Html.CollapsiblePanel(Dictionary.ProductSummary, Html.Partial("../Orders/_ProductsSummary").ToString())
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        @Html.CollapsiblePanel(Dictionary.ProductPackSummary, Html.Partial("../Orders/_ProductPackSummary").ToString())
    </div>
</div>