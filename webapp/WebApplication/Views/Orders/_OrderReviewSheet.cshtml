@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model K9.WebApplication.ViewModels.OrdersReviewViewModel

<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#products">@Dictionary.Products</a></li>
    <li><a data-toggle="pill" href="#productpacks">@Dictionary.ProductPacks</a></li>
    <li>
        <div class="padding-left-16 margin-bottom-10">
            @Html.BootstrapEditorFor(e => Model.SelectedOrder.ShowCompleted)
        </div>
    </li>
</ul>

<div class="tab-content">
    <div id="products" class="tab-pane fade in active padding-top-15">
        @Html.Partial("_ProductsReview", Model.SelectedOrder)
    </div>
    <div id="productpacks" class="tab-pane fade padding-top-15">
        @Html.Partial("_ProductPacksReview", Model.SelectedOrder)
    </div>
</div>

<script type="text/javascript">

    $(function () {
        $("#@nameof(Order.ShowCompleted)").click(function () {
            var showComplete = $(this).is(":checked");
            var $hiddenRows = $(".complete-rows");

            if (showComplete) {
                $hiddenRows.show();
            } else {
                $hiddenRows.hide();
            }
        });
    })

</script>



