@using K9.Base.WebApplication.Extensions
@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Order

<div class="row">
    <div class="col-sm-12">
        <h3>@Dictionary.ProductPacks</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].Name)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].Amount)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].AmountCompleted)
    </div>
    <div class="col-sm-3">
        @Html.LabelFor(e => Model.ProductPacks[0].AmountRemaining)
    </div>
</div>
<hr />
@for (int i = 0; i < Model.Products.Count; i++)
{
    @Html.HiddenFor(e => Model.ProductPacks[i].Id)

    <div class="row">
        <div class="col-sm-3">
            <a target="_blank" href="@Url.Action("Details", "ProductPacks", new {id = Model.ProductPacks[i].ProductPackId})">
                @Html.DisplayFor(e => Model.ProductPacks[i].ProductPack.Name)
            </a>
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(e => Model.ProductPacks[i].Amount)
        </div>
        <div class="col-sm-3">
            @Html.EditorFor(e => Model.ProductPacks[i].AmountCompleted)
        </div>
        <div class="col-sm-3">
            @Html.DisplayFor(e => Model.ProductPacks[i].AmountRemaining)
        </div>
    </div>
    if (i < Model.Products.Count - 1)
    {
        <hr />
    }
}

