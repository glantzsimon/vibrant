@using K9.Base.WebApplication.Controllers
@using K9.Base.WebApplication.Helpers
@using K9.SharedLibrary.Authentication
@using K9.SharedLibrary.Models
@using EButtonType = K9.SharedLibrary.Models.EButtonType
@model K9.WebApplication.ViewModels.OrdersReviewViewModel
@{
    Layout = "~/Views/Shared/_LayoutFormWide.cshtml";
    ViewBag.Title = Dictionary.Orders;
    ViewBag.SubTitle = Dictionary.Orders;

    var incompleteOrders = Model.GetIncompleteOrders();
    var completeOrders = Model.GetCompleteOrders();
    var ordersOnHold = Model.GetOrdersOnHold();
}

<div class="row">
    <div class="col-xs-12 padding-0">
        @Html.BootstrapActionLinkButton(K9.Base.Globalisation.Dictionary.CreateNew, "Create", "Orders", null, "fa fa-plus-circle", EButtonClass.Primary)
    </div>
</div>

<br />

<div class="well">
    <div class="row table-row">
        <div class="col-xs-12">
            <h3 class="section-title">@Dictionary.IncompleteOrders</h3>
        </div>
    </div>

    <div class="row table-row">
        <div class="col-xs-2">
            <strong>@Html.LabelFor(e => Model.AllOrders[0].FullName)</strong>
        </div>
        <div class="col-xs-2">
            <strong>@Html.LabelFor(e => Model.AllOrders[0].RepId)</strong>
        </div>
        <div class="col-xs-2">
            <strong>@Html.LabelFor(e => Model.AllOrders[0].ClientId)</strong>
        </div>
        <div class="col-xs-2">
            <strong>@Html.LabelFor(e => Model.AllOrders[0].RequestedOn)</strong>
        </div>
        <div class="col-xs-2">
            <strong>@Html.LabelFor(e => Model.AllOrders[0].PaidOn)</strong>
        </div>
        <div class="col-xs-2">
        </div>
    </div>

    @foreach (var item in incompleteOrders)
    {
        <div class="row table-row">
            <div class="col-xs-2">
                @Html.DisplayFor(e => item.FullName)
            </div>
            <div class="col-xs-2">
                @Html.DisplayFor(e => item.RepId)
            </div>
            <div class="col-xs-2">
                @Html.DisplayFor(e => item.ClientId)
            </div>
            <div class="col-xs-2">
                @Html.DisplayFor(e => item.RequestedOn)
            </div>
            <div class="col-xs-2">
                @Html.DisplayFor(e => item.PaidOn)
            </div>
            <div class="col-xs-2">
                @Html.Partial("_TableCollectionsButtons", item)
            </div>
        </div>
    }
</div>

