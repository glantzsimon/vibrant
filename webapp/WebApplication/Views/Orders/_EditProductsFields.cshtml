@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Order

@for (int i = 0; i < Model.Products.Count; i++)
{
    @Html.HiddenFor(e => Model.Products[i].Id)
    @Html.HiddenFor(e => Model.Products[i].Product.Id)
    @Html.HiddenFor(e => Model.Products[i].Product.Name)

    <div class="row">
        <div class="col-sm-4">
            @Html.BootstrapDisplayFor(e => Model.Products[i].Product.Name)
        </div>
        <div class="col-sm-4">
            @Html.BootstrapEditorFor(e => Model.Products[i].PriceTier)
        </div>
        <div class="col-sm-4">
            @Html.BootstrapEditorFor(e => Model.Products[i].Amount)
        </div>
    </div>
}

