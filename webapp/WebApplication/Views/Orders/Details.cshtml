@using K9.Base.WebApplication.Helpers
@model ProductPack
@{
    Layout = "../Shared/_LayoutForm.cshtml";
}
@using (Html.BeginForm("View", "Products"))
{
    using (Html.BeginBootstrapForm())
    {
        @Html.BootstrapEditorFor(model => model.ProductPackId)
    }
}
@using (Html.BeginForm())
{
    using (Html.BeginBootstrapForm())
    {
        @Html.HiddenFor(model => model.Id)

        @Html.Partial("_DisplayFields")
        @Html.AuditFieldsForModel(Model);

        <hr />
        @Html.BootstrapBackToListButton()
        @Html.CrudButtonsForModel(Model)
        @Html.BootstrapActionLinkButton(Dictionary.ExternalLink, "PackLink", "Product", new {id = Model.ExternalId}, "", EButtonClass.Success)
    }
}

<script type="text/javascript">
    $(function () {
        $("#ProductPackId").change(function () {
            $("#ProductPackId").closest("form").submit();
        });
    })
</script>