@using K9.Base.WebApplication.Helpers
@using K9.DataAccessLayer.Enums
@using K9.WebApplication.Helpers
@model Protocol

@if (Model.Type == EProtocolType.ParasiteCleanse)
{
    @Html.Partial("../Protocols/_ParasiteCleanse")
}
else
{
    switch (Model.Frequency)
    {
        case EFrequency.Daily:
            @Html.Partial("../Protocols/_DailySchedule")
            break;

        case EFrequency.Monthly:
            @Html.Partial("../Protocols/_MonthlySchedule")
            break;

        case EFrequency.Fortnightly:
            @Html.Partial("../Protocols/_FortnightlySchedule")
            break;

        default:
            @Html.Partial("../Protocols/_CustomSchedule")
            break;
    }
}
