@using K9.Base.WebApplication.Helpers
@using K9.WebApplication.Helpers
@model Protocol

@if (Model.Activities.Any())
{
    <div class="row">
        <div class="col-xs-2">
            @Html.LabelFor(e => Model.Activities[0].Activity.Name)
        </div>
        <div class="col-xs-3">
            @Html.LabelFor(e => Model.Activities[0].Activity.ShortDescription)
        </div>
        <div class="col-xs-3">
            @Html.LabelFor(e => Model.Activities[0].Activity.Body)
        </div>
        <div class="col-xs-2">
            @Html.LabelFor(e => Model.Activities[0].Activity.Benefits)
        </div>
        <div class="col-xs-2">
            @Html.LabelFor(e => Model.Activities[0].Activity.Reommendations)
        </div>
    </div>
    <hr />

    for (int i = 0; i < Model.Activities.Count; i++)
    {
        var activity = Model.Activities[i].Activity;
        var isLast = i == Model.Activities.Count - 1;

        <div class="row">
            <div class="col-xs-2">
                @Html.BootstrapDisplayFor(e => activity.Name, new EditorOptions
                {
                    Label = ""
                })
            </div>
            <div class="col-xs-3">
                @Html.BootstrapDisplayFor(e => activity.ShortDescription, new EditorOptions
                {
                    Label = ""
                })
            </div>
            <div class="col-xs-3">
                @Html.BootstrapDisplayFor(e => activity.Body, new EditorOptions
                {
                    Label = ""
                })
            </div>
            <div class="col-xs-2">
                @Html.BootstrapDisplayFor(e => activity.Benefits, new EditorOptions
                {
                    Label = ""
                })
            </div>
            <div class="col-xs-2">
                @Html.BootstrapDisplayFor(e => activity.Reommendations, new EditorOptions
                {
                    Label = ""
                })
            </div>
        </div>
        if (!isLast)
        {
            <hr />
        }
    }
}